@{
    ViewBag.Title = "Inicio";
}

<div class="homeContainer">
    <section>
        <h2>Iniciar sesión</h2>
        <div class="formContainer">
            <table>
                <tr>
                    <td><label for="username">Usuario</label></td>
                    <td><input id="username" name="username" type="text"/></td>
                </tr>
                <tr>
                    <td><label for="password">Contraseña</label></td>
                    <td><input id="password" name="password" type="password"/></td>
                </tr>
            </table>
            <input type="button" value="Ingresar"/>
        </div>
    </section>
    <div class="separator vertical"></div>
    <section>
        <h2>Afiliación en línea</h2>
        <div class="formContainer">
            <table>
                <tr>
                    <td><label for="id">Identificación</label></td>
                    <td><input id="id" name="id" type="text"/></td>
                </tr>
                <tr>
                    <td><label for="name">Nombre</label></td>
                    <td><input id="name" name="name" type="text"/></td>
                </tr>
                <tr>
                    <td><label for="lastname1">Apellido 1</label></td>
                    <td><input id="lastname1" name="lastname1" type="text"/></td>
                </tr>
                <tr>
                    <td><label for="lastname2">Apellido2</label></td>
                    <td><input id="lastname2" name="lastname2" type="text"/></td>
                </tr>
                <tr>
                    <td><label for="email">E-mail</label></td>
                    <td><input id="email" name="email" type="text"/></td>
                </tr>
                <tr>
                    <td><label for="campus">Campus</label></td>
                    <td><input id="campus" name="campus" type="text"/></td>
                </tr>
                <tr>
                    <td><label for="employeeCode">Cód. de empleado</label></td>
                    <td><input id="employeeCode" name="employeeCode" type="text"/></td>
                </tr>
            </table>
            <input type="button" value="Enviar solicitud"/>
        </div>
    </section>
</div>
